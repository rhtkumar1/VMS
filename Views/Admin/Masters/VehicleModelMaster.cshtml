@model IMS.Models.ViewModel.VehicleModelMaster
@{
    ViewBag.Title = "Vehicle Model Master";
    Layout = "~/Views/Shared/DashBoard/_Layout.cshtml";
}
<script src="~/assets/Vehiclemodelmaster.js"></script>
@{
    var AppToken = Convert.ToString(@Model.AppToken);
}
<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/admin/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Vehicle Model Master</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div id="modelForm">
            <div class="blank">
                <div class="blank-page">
                    @Html.Partial("~/Views/Shared/_MessageBox.cshtml")
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group pull-right">
                        @using (Html.BeginForm("ManageVehicleModelMaster", "Master", FormMethod.Post, new { enctype = "multipart/form-data", @id = "VehicleModelMaster" }))
                        {
                            @Html.HiddenFor(m => m.Id, htmlAttributes: new { @id = "Id" })
                            @Html.HiddenFor(m => m.AppToken)
                            <div class="heading">
                                <h4>
                                    Vehicle Model Detail
                                </h4>
                            </div>
                            <br />
                            <div class="styled-input">
                                <div class="col-md-6 form-group">
                                    <label>Model Name<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.Model_Name, htmlAttributes: new { @placeholder = "Enter Model Name", @id = "Model_Name", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-6 form-group">
                                    <label>Tyre Count<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.Tyre_Count, htmlAttributes: new { @placeholder = "Enter Tyre Count", @id = "Tyre_Count", @type = "number", @min = "0", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-6 form-group">
                                    <label>Code<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.Code, htmlAttributes: new { @placeholder = "Enter Code ", @id = "Code", @required = "required", @class = "form-control" })
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Battery Count<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.Battery_Count, htmlAttributes: new { @placeholder = "Enter Battery Count ", @id = "Battery_Count", @type = "number", @min = "0", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="styled-input">
                                <div class="col-md-6 form-group">
                                    <label>OEM<span class="mandatory">*</span></label>
                                    @Html.DropDownListFor(m => m.Oem_Id, new SelectList(Model.Oem_List, "Value", "Text"), htmlAttributes: new { @id = "Oem_Id", @class = "form-control" })
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Stephny Count<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.Stephny_Count, htmlAttributes: new { @placeholder = "Enter Stephny Count ", @id = "Stephny_Count", @type = "number", @min = "0", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-10"></div>
                            <div class="col-md-1 form-group pull-right">
                                <div class="appointment-btn text-lg-right">
                                    <button type="reset" name="btnReset" id="btnReset" class="btncustome">Reset</button>
                                </div>
                            </div>
                            <div class="col-md-1 form-group pull-right">
                                <div class="appointment-btn text-lg-right">
                                    <button type="submit" name="btnSubmit" id="btnSubmit" class="btncustome">Submit</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="blank-page">
                    <div id="listGrid"></div>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
    <!--//content-->
    <!---->
</div>

<script type="text/javascript">
    $(document).ready(function () {
        if ('@ViewBag.Msg' != "") {
            $('#alertModal').modal('show');
            $('#msg').html("@ViewBag.Msg");
        }
        IMSC.ajaxCall("GET", "/Master/GetVehicleModelMaster?AppToken="+'@Model.AppToken', {}, "text", function (d) {
         var StateLists = JSON.parse(d);
         if (StateLists !== "null") {
             var fields = [
                 {
                     title: "Action",
                     width: 80,
                     itemTemplate: function (value, args) {
                         return IMSC.genrateDynamicButtons(value, args,@Model.AuthMode);
                     }
                 },
                 { name: "Id", css: "hidden" },
                 { name: "Model_Name", type: "text", title: "Model Name", sorting: true, filtering: true, width: 150 },
                 { name: "Code", type: "text", title: "Code", sorting: true, filtering: false, width: 100 },
                 { name: "Oem_Id", css: "hidden" },
                 { name: "Title", type: "text", title: "Oem", sorting: true, filtering: false, width: 100 },
                 { name: "Tyre_Count", type: "text", title: "Tyre Count", sorting: true, filtering: false, width: 100 },
                 { name: "Battery_Count", type: "text", title: "Battery Count", sorting: true, filtering: false, width: 150 },
                 { name: "Stephny_Count", type: "text", title: "Stephny Count", sorting: true, filtering: false, width: 150 },
             ];
             var options = {
                 filtering: true,
                 editing: true,
                 sorting: true,
                 paging: true,
                 autoload: true,
                 controller: {
                     StateLists: StateLists,
                     loadData: function (filter) {
                         return $.grep(this.StateLists, function (StateList) {
                             return ((!filter.Title || StateList.Title.toLowerCase().indexOf(filter.Title.toLowerCase()) > -1)
                                 && (!filter.Code || StateList.Code.toLowerCase().indexOf(filter.Code.toLowerCase()) > -1));
                         });
                     }
                 },
                 fields: fields
             };
             $.extend(options, IMSC.grid_options);
             $("#listGrid").jsGrid(options);
             IMSC.filteOnKeyPress("#listGrid");
                }
            });
        });
        var editFormData = function (dilogType, VehicleModelMaster) {
            $("msg").text = "";
            if (VehicleModelMaster.Id > 0) {
                $("#Id").val(VehicleModelMaster.Id);
                $("#Model_Name").val(VehicleModelMaster.Model_Name);
                $("#Code").val(VehicleModelMaster.Code);
                $("#Tyre_Count").val(VehicleModelMaster.Tyre_Count);
                $("#Battery_Count").val(VehicleModelMaster.Battery_Count);
                $("#Stephny_Count").val(VehicleModelMaster.Stephny_Count);
                $("#Oem_Id").val(VehicleModelMaster.Oem_Id);
                $("#btnSubmit").text("Update")
            }
            else {
                $("#Id").val("0");
                $("#btnSubmit").text("Submit")
            }
        };

        var deleteFormData = function (dialogType, VehicleModelMaster) {
            var result = confirm("Want to delete?");
            if (result == true) {
                IMSC.ajaxCall("POST", "/Master/DeleteVehicleModelMaster?id=" + VehicleModelMaster.Id + "&AppToken=" + '@Model.AppToken', {}, "text", function (d) {
            var result = JSON.parse(d);
            if (result !== "null" && result !== "") {
                window.location.reload();
            }
        });
            } else {
                return false;
            }
    };
</script>
